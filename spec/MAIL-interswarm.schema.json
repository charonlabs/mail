{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/charonlabs/mail/spec/MAIL-interswarm.schema.json",
  "title": "MAIL Interswarm Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "message_id",
    "source_swarm",
    "target_swarm",
    "timestamp",
    "payload",
    "msg_type",
    "task_owner",
    "task_contributors"
  ],
  "properties": {
    "message_id": { 
      "type": "string", 
      "format": "uuid"
    },
    "source_swarm": { 
      "type": "string", 
      "minLength": 1 
    },
    "target_swarm": { 
      "type": "string", 
      "minLength": 1 
    },
    "timestamp": { 
      "type": "string", 
      "format": "date-time" 
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["task_id", "task_owner", "task_contributors", "start_time", "completed", "metadata"],
      "properties": {
        "task_id": {
          "type": "string",
          "format": "uuid"
        },
        "task_owner": {
          "$ref": "#/$defs/MAILInstance"
        },
        "task_contributors": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { 
            "$ref": "#/$defs/MAILInstance" 
          },
          "additionalItems": false
        },
        "start_time": {
          "type": "string",
          "format": "date-time"
        },
        "completed": {
          "type": "boolean"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "payload": { 
      "$ref": "#/$defs/MAILMessage" 
    },
    "metadata": { 
      "type": "object",
      "additionalProperties": true
    }
  }
}
