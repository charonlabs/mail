{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/charonlabs/mail/spec/MAIL-core.schema.json",
  "title": "MAIL Core Schema",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/MAILMessage" }
  ],
  "$defs": {
    "MAILAddress": {
      "type": "object",
      "additionalProperties": false,
      "required": ["addr_type", "address"],
      "properties": {
        "addr_type": {
          "type": "string",
          "enum": ["admin","agent", "user", "system"]
        },
        "address": { 
          "type": "string", 
          "minLength": 1 
        }
      }
    },
    "MAILMessage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "timestamp", "msg_type", "sender", "recipients", "subject", "body", "metadata"],
      "properties": {
        "id": { 
          "type": "string", 
          "format": "uuid" 
        },
        "timestamp": { 
          "type": "string", 
          "format": "date-time" 
        },
        "msg_type": {
          "type": "string",
          "enum": ["direct", "broadcast", "interrupt", "task_complete"]
        },
        "sender": {
          "$ref": "#/$defs/MAILAddress"
        },
        "recipients": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/MAILAddress"
          },
          "additionalItems": false
        },
        "subject": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "MAILTask": {
      "type": "object",
      "additionalProperties": false,
      "required": ["task_id", "task_owner", "task_contributors", "start_time", "completed", "messages", "metadata"],
      "properties": {
        "task_id": {
          "type": "string",
          "format": "uuid"
        },
        "task_owner": {
          "$ref": "#/$defs/MAILInstance"
        },
        "task_contributors": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/MAILInstance"
          },
          "additionalItems": false
        },
        "start_time": {
          "type": "string",
          "format": "date-time"
        },
        "completed": {
          "type": "boolean"
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/MAILMessage"
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "MAILInstance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["instance_type", "instance_client_id", "swarm_name"],
      "properties": {
        "instance_type": {
          "type": "string",
          "enum": ["admin", "user", "swarm"]
        },
        "instance_client_id": {
          "type": "string"
        },
        "swarm_name": {
          "type": "string"
        }
      }
    },
    "MAILServerSentEvent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["event", "data"],
      "properties": {
        "event": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "MAILRemoteSwarm": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "base_url", "protocol_version", "active", "last_seen", "description", "keywords", "metadata"],
      "properties": {
        "name": { 
          "type": "string",
          "minLength": 1
        },
        "base_url": { 
          "type": "string",
          "format": "uri" 
        },
        "protocol_version": { 
          "type": "string",
          "enum": ["2.0"]
        },
        "active": { 
          "type": "boolean" 
        },
        "last_seen": { 
          "type": "string", 
          "format": "date-time", 
          "nullable": true 
        },
        "description": { 
          "type": "string", 
          "nullable": true 
        },
        "keywords": { 
          "type": "array", 
          "items": { 
            "type": "string" 
          }, 
          "nullable": true 
        },
        "metadata": { 
          "type": "object", 
          "additionalProperties": true, 
          "nullable": true 
        }
      }
    }
  }
}
